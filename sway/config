    blur enable
    blur_xray enable
}

for_window [app_id="org.prismlauncher.PrismLauncher"] {
    blur enable
}

corner_radius 10
smart_corner_radius off

shadows enable
shadow_blur_radius 2

shadow_color #000000CC
default_dim_inactive 0.2
for_window [class="URxvt"] dim_inactive 0.1

gaps inner 4
gaps outer 4



